declare -A ZPLGM
ZPLGM[HOME_DIR]="{{ zplugin_home_dir }}"
ZPLGM[BIN_DIR]="{{ zplugin_home_dir }}/bin"
ZPLGM[PLUGINS_DIR]="{{ zplugin_data_dir }}/plugins"
ZPLGM[COMPLETIONS_DIR]="{{ zplugin_data_dir }}/completions"
ZPLGM[SNIPPETS_DIR]="{{ zplugin_data_dir }}/snippets"
ZPLGM[ZCOMPDUMP_PATH]="{{ zcompdump_location }}"
ZPLGM[COMPINIT_OPTS]="-C"
[ -s {{ zplugin_home_dir }}/bin/zplugin.zsh ] && source {{ zplugin_home_dir }}/bin/zplugin.zsh

{% for plugin in zplugin_plugins %}
{% if "ices" in plugin %}zplugin ice {% for ice in plugin.ices %} {% if ice is mapping %}{% if "value" in ice %}{{ ice.name }}='{{ ice.value }}'{% else %}{{ ice.name }}{% endif %}{% else %}{{ ice }}{% endif %}{% endfor %}{% endif %}

zplugin {{ plugin.type }} {{ plugin.name }}

{% endfor %}